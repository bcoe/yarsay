{
  "name": "yarsay",
  "version": "1.0.5",
  "description": "Tell Pirate Joe what to say",
  "main": "lib/yarsay.js",
  "bin": "lib/cli.js",
  "scripts": {
    "build": "cd src; babel ./*.js -d ../lib",
    "coverage": "cat ./coverage/lcov.info | coveralls",
    "prepublish": "npm run build",
    "pretest": "standard ./src/*.js",
    "test": "cross-env NODE_ENV=test nyc --cache --silent mocha",
    "posttest": "nyc report --reporter lcov --reporter text",
    "release": "standard-version"
  },
  "babel": {
    "presets": [
      "es2015"
    ],
    "env": {
      "test": {
        "plugins": [
          "__coverage__"
        ]
      }
    }
  },
  "nyc": {
    "include": [
      "src/*.js"
    ],
    "require": [
      "babel-register"
    ],
    "sourceMap": false,
    "instrument": false
  },
  "repository": {
    "type": "git",
    "url": "http://github.com/yargs/yarsay.git"
  },
  "keywords": [
    "yargs",
    "cli",
    "yarsay",
    "pirate",
    "talk"
  ],
  "author": "Ben Coe <ben@npmjs.com>",
  "license": "ISC",
  "devDependencies": {
    "babel-cli": "^6.10.1",
    "babel-core": "^6.9.1",
    "babel-plugin-__coverage__": "^11.0.0",
    "babel-preset-es2015": "^6.9.0",
    "chai": "^3.4.1",
    "coveralls": "^2.11.6",
    "cross-env": "^1.0.8",
    "mocha": "^2.3.4",
    "nyc": "^6.6.1",
    "standard": "^7.1.2",
    "standard-version": "^2.3.0"
  },
  "dependencies": {
    "bluebird": "^3.1.1",
    "chalk": "^1.1.3",
    "cliui": "^3.1.0",
    "get-stdin": "^5.0.1",
    "window-size": "^0.2.0",
    "yargs": "^4.7.1"
  }
}
